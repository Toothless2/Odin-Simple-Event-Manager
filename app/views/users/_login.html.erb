<%= simple_form_for(User.new, url: user_login_path, method: :post) do |f| %>

  <div class="form-inputs">
    <%= f.input :email, autofocus: true, required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, value: 'Login' %>
  </div>
<% end %>
<%= button_to 'Create Acount', new_user_path, method: :get %>