<p id="notice"><%= notice %></p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>You are going to:</strong>
  <ul>
    <% if @user.currentEvents.count == 0%>
      <li>Nothing :(</li>
    <%else%>
      <% @user.currentEvents.each do |e| %>
        <li><%= link_to e.title, event_path(e) %> @ <%= e.when %> and <%= e.users.count %> <%= 'person'.pluralize(e.users.count) %> <%= e.users.count == 1 ? 'is' : 'are' %> going
      <%end%>
    <%end%>
  </ul>
</p>

<p>
  <strong>You have been to:</strong>
  <ul>
    <% if @user.previousEvents.count == 0%>
      <li>Nothing :(</li>
    <%else%>
      <% @user.previousEvents.each do |e| %>
        <li><%= link_to e.title, event_path(e) %> @ <%= e.when %> and <%= e.users.count %> <%= 'person'.pluralize(e.users.count) %> <%= e.users.count == 1 ? 'is' : 'are' %> going
      <%end%>
    <%end%>
  </ul>
</p>

<%= link_to 'Back', users_path %>
